<% include header %>
<!-- spacer section -->
<section class="spacer green">
    <div class="container">
        <% if (this.err){ %>
        <ul>
            <%for (var result in err){%>
            <li><%=result%></li>
            <%}%>
        </ul>
        <%}%>
        <div class="col-xs-12  col-md-8">
            <form class="form-horizontal" action="" method="post">

                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Username</label>
                    </div>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="username">
                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Password</label>
                    </div>
                    <div class="col-sm-10">
                        <input type="password" class="form-control col-sm-10" name="password">
                    </div>

                </div>

                <div class="form-group row">
                    <input type="submit" class="button btn-default" value="Login">
                </div>

            </form>

        </div>
    </div>
</section>
<!-- end spacer section -->

<% include footer %>
