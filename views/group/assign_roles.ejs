<% include ../header %>
<section id="maincontent" class="inner">
    <div class="container">
        <div class="col-xs-12">
            <div class="box box-solid">
                <div class="box-header">
                    <h4 class="box-title"><i class="fa fa-lock"></i> Assign Permission <em>[<%- group %>]</em></h4>
                    <div class="box-tools">
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <form class="form jvalidate" method="POST" action="">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover group-permission">
                                <thead>
                                <tr>
                                    <th class="sn"><input type="checkbox" id="select-all"></th>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                                </thead>

                                <tbody>
                                <% results.forEach(function(val) { %>
                                <tr class="section">
                                    <th><input type="checkbox" class="role" id=""></th>
                                    <th colspan="2"><%- val._id%> </th>
                                </tr>

                                <% val.Roles.forEach(function(role) {%>
                                <tr>
                                    <td><input type="checkbox" name="roles" class="role <%-role.section %>" value="<%-role.name %>"  ></td>
                                    <td><%- role.name%> </td>
                                    <td><%-  role.description %></td>
                                </tr>
                                <% }) %>
                                <% })%>
                                </tbody>
                            </table>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-primary" value="Update">Update</button>
                                <button type="reset" class="btn btn-warning" value="Reset">Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<% include ../footer %>