<% include ../header %>
<section id="maincontent" class="inner">
    <div class="container">
        <h2> Edit Group <%- name%></h2>
        <% var group = null; %>
        <% result.forEach(function(val) { %>

        <% group = val %>
        <%})%>

        <div class="col-xs-12  col-md-8">
            <form class="form-horizontal" action="" method="post">
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Name</label>
                    </div>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="name" value="<%- group.name%>" readonly="readonly">
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Description</label>
                    </div>
                    <div class="col-sm-10">
                        <input type="text" class="form-control col-sm-" name="description" value="<%- group.description%>">
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>status</label>
                    </div>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="status" value="<%- group.status%>">
                    </div>
                </div>
                <div class="row">
                    <input type="submit" class="button btn-success" name="submit">
                </div>
            </form>

        </div>
    </div>
</section> <!-- end maincontent -->

<% include ../footer %>